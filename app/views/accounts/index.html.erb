<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Accounts</h1>
    <%= link_to "New Account", new_account_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

  <!-- Net Worth Summary -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-700 mb-2">Net Worth</h2>
    <p class="text-3xl font-bold <%= @net_worth >= 0 ? 'text-green-600' : 'text-red-600' %>">
      <%= number_to_currency(@net_worth) %>
    </p>
    <div class="mt-4 text-sm text-gray-600">
      <p>Total Savings: <%= number_to_currency(@savings_accounts.sum(:balance)) %></p>
      <p>Total Debt: <%= number_to_currency(@mortgages.sum(:balance)) %></p>
    </div>
  </div>

  <!-- Savings Accounts Section -->
  <section class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Savings Accounts</h2>

    <% if @savings_accounts.any? %>
      <div class="bg-white shadow overflow-hidden rounded-lg divide-y divide-gray-200">
        <% @savings_accounts.each do |account| %>
          <%= link_to account_path(account), class: "block hover:bg-gray-50 transition" do %>
            <div class="px-6 py-4">
              <div class="flex justify-between items-center">
                <div>
                  <h3 class="text-lg font-medium text-gray-900"><%= account.name %></h3>
                  <p class="text-sm text-gray-500">Opened <%= account.opened_at.strftime("%B %d, %Y") %></p>
                </div>
                <div class="text-right">
                  <p class="text-2xl font-bold text-green-600"><%= number_to_currency(account.balance) %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 italic">No savings accounts yet.</p>
    <% end %>
  </section>

  <!-- Mortgages Section -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Mortgages</h2>

    <% if @mortgages.any? %>
      <div class="bg-white shadow overflow-hidden rounded-lg divide-y divide-gray-200">
        <% @mortgages.each do |mortgage| %>
          <%= link_to account_path(mortgage), class: "block hover:bg-gray-50 transition" do %>
            <div class="px-6 py-4">
              <div class="flex justify-between items-center">
                <div>
                  <h3 class="text-lg font-medium text-gray-900"><%= mortgage.name %></h3>
                  <p class="text-sm text-gray-500">
                    <%= mortgage.interest_rate %>% Â· <%= mortgage.term_years %> years
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-gray-500">Amount Owed</p>
                  <p class="text-2xl font-bold text-red-600"><%= number_to_currency(mortgage.balance) %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 italic">No mortgages yet.</p>
    <% end %>
  </section>
</div>
