<div class="flex h-screen bg-gray-100">
  <!-- Left Sidebar Navigation -->
  <div class="w-80 bg-white shadow-lg overflow-y-auto flex flex-col">
    <!-- Header -->
    <div class="p-6 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Accounts</h1>

      <!-- Net Worth Summary -->
      <div class="mb-4 p-3 bg-gray-50 rounded-lg">
        <p class="text-xs text-gray-600 mb-1">Net Worth</p>
        <p class="text-xl font-bold <%= @net_worth >= 0 ? 'text-green-600' : 'text-red-600' %>">
          <%= number_to_currency(@net_worth) %>
        </p>
      </div>

      <%= link_to "New Account", new_account_path, class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
    </div>

    <!-- Savings Accounts Section -->
    <div class="border-b border-gray-200">
      <h2 class="px-6 py-3 text-sm font-semibold text-gray-700 uppercase tracking-wider bg-gray-50">Savings Accounts</h2>
      <% if @savings_accounts.any? %>
        <nav class="py-2">
          <% @savings_accounts.each do |account| %>
            <%= link_to account_path(account), data: { turbo_frame: "account_detail" }, class: "block px-6 py-4 hover:bg-gray-50 border-l-4 border-transparent hover:border-blue-500 transition-colors" do %>
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-1"><%= account.name %></h3>
                  <p class="text-xs text-gray-500">
                    <%= account.opened_at.strftime("%b %d, %Y") %>
                  </p>
                </div>
                <div class="text-right">
                  <span class="text-lg font-bold text-green-600">
                    <%= number_to_currency(account.balance) %>
                  </span>
                </div>
              </div>
            <% end %>
          <% end %>
        </nav>
      <% else %>
        <p class="px-6 py-4 text-sm text-gray-500 italic">No savings accounts yet.</p>
      <% end %>
    </div>

    <!-- Mortgages Section -->
    <div>
      <h2 class="px-6 py-3 text-sm font-semibold text-gray-700 uppercase tracking-wider bg-gray-50">Mortgages</h2>
      <% if @mortgages.any? %>
        <nav class="py-2">
          <% @mortgages.each do |mortgage| %>
            <%= link_to account_path(mortgage), data: { turbo_frame: "account_detail" }, class: "block px-6 py-4 hover:bg-gray-50 border-l-4 border-transparent hover:border-red-500 transition-colors" do %>
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-1"><%= mortgage.name %></h3>
                  <p class="text-xs text-gray-500">
                    <%= mortgage.interest_rate %>% Â· <%= mortgage.term_years %> years
                  </p>
                </div>
                <div class="text-right">
                  <span class="text-sm text-gray-500 block">Owed</span>
                  <span class="text-lg font-bold text-red-600">
                    <%= number_to_currency(mortgage.balance) %>
                  </span>
                </div>
              </div>
            <% end %>
          <% end %>
        </nav>
      <% else %>
        <p class="px-6 py-4 text-sm text-gray-500 italic">No mortgages yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 overflow-y-auto">
    <%= turbo_frame_tag "account_detail" do %>
      <div class="flex items-center justify-center h-full text-gray-500">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No account selected</h3>
          <p class="mt-1 text-sm text-gray-500">Select an account from the sidebar to view details</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
