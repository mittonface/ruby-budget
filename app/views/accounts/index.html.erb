<div class="flex h-screen bg-gray-100">
  <!-- Left Sidebar Navigation -->
  <div class="w-80 bg-white shadow-lg overflow-y-auto flex flex-col">
    <!-- Header -->
    <div class="p-6 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900 mb-4">Savings Accounts</h1>
      <%= link_to "New Account", new_account_path, class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
    </div>

    <!-- Accounts List -->
    <div class="flex-1 overflow-y-auto">
      <% if @accounts.any? %>
        <nav class="py-2">
          <% @accounts.each do |account| %>
            <%= link_to account_path(account), data: { turbo_frame: "account_detail" }, class: "block px-6 py-4 hover:bg-gray-50 border-l-4 border-transparent hover:border-blue-500 transition-colors" do %>
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-1"><%= account.name %></h3>
                  <p class="text-xs text-gray-500">
                    <%= account.opened_at.strftime("%b %d, %Y") %>
                  </p>
                </div>
                <div class="text-right">
                  <span class="text-lg font-bold <%= account.balance >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(account.balance) %>
                  </span>
                </div>
              </div>
            <% end %>
          <% end %>
        </nav>
      <% else %>
        <div class="p-6 text-center text-gray-500">
          <p class="text-sm">No accounts yet. Create your first savings account to get started!</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 overflow-y-auto">
    <%= turbo_frame_tag "account_detail" do %>
      <div class="h-full flex items-center justify-center text-gray-400">
        <div class="text-center">
          <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
          <h3 class="mt-4 text-xl font-medium text-gray-500">Select an account</h3>
          <p class="mt-2 text-sm text-gray-400">Choose an account from the sidebar to view details</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
