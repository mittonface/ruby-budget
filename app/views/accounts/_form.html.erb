<%= form_with(model: account, class: "space-y-6") do |form| %>
  <% if account.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h2 class="text-red-800 font-semibold mb-2">
        <%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:
      </h2>
      <ul class="list-disc list-inside text-red-700">
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Account Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., Emergency Fund" %>
  </div>

  <div>
    <%= form.label :initial_balance, "Initial Balance", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="relative">
      <span class="absolute left-4 top-2 text-gray-500">$</span>
      <%= form.number_field :initial_balance, step: 0.01, class: "w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "0.00" %>
    </div>
    <p class="mt-1 text-sm text-gray-500">The starting balance when opening this account</p>
  </div>

  <div>
    <%= form.label :opened_at, "Opened Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.date_field :opened_at, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="flex gap-4">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors cursor-pointer" %>
    <%= link_to "Cancel", account.persisted? ? account_path(account) : accounts_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-6 rounded-lg transition-colors" %>
  </div>
<% end %>
