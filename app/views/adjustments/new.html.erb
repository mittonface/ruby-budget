<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "â† Back to Account", account_path(@account), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Add Adjustment</h1>
    <p class="text-gray-600 mb-6"><%= @account.name %></p>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <p class="text-sm text-gray-600">Current Balance</p>
      <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@account.balance) %></p>
    </div>

    <%= form_with(model: [@account, @adjustment], class: "space-y-6", data: { controller: "adjustment-form" }) do |form| %>
      <% if @adjustment.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h2 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@adjustment.errors.count, "error") %> prohibited this adjustment from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700">
            <% @adjustment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Mode Toggle -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <label class="block text-sm font-medium text-gray-700 mb-3">Adjustment Type</label>
        <div class="flex gap-6">
          <label class="flex items-center cursor-pointer">
            <input type="radio" name="mode" id="mode_add_adjustment" value="add_adjustment" checked
                   data-action="change->adjustment-form#toggleFields"
                   class="mr-2 w-4 h-4 text-blue-600">
            <span class="text-gray-700">Add Adjustment</span>
          </label>
          <label class="flex items-center cursor-pointer">
            <input type="radio" name="mode" id="mode_set_balance" value="set_balance"
                   data-action="change->adjustment-form#toggleFields"
                   class="mr-2 w-4 h-4 text-blue-600">
            <span class="text-gray-700">Set Balance</span>
          </label>
        </div>
      </div>

      <!-- Add Adjustment Mode Fields -->
      <div data-adjustment-form-target="amountField">
        <%= form.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative">
          <span class="absolute left-4 top-2 text-gray-500">$</span>
          <%= form.number_field :amount, step: 0.01, class: "w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "100.00", data: { adjustment_form_target: "amountInput" } %>
        </div>
        <p class="mt-1 text-sm text-gray-500">Use positive numbers for deposits, negative for withdrawals (e.g., 500 or -200)</p>
      </div>

      <!-- Set Balance Mode Fields -->
      <div data-adjustment-form-target="balanceField" class="hidden">
        <%= form.label :new_balance, "New Balance", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative">
          <span class="absolute left-4 top-2 text-gray-500">$</span>
          <%= form.number_field :new_balance, step: 0.01, class: "w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "1500.00", data: { adjustment_form_target: "balanceInput" } %>
        </div>
        <p class="mt-1 text-sm text-gray-500">Enter the account's current balance (adjustment will be calculated automatically)</p>
      </div>

      <div>
        <%= form.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "e.g., Monthly paycheck deposit" %>
      </div>

      <div>
        <%= form.label :adjusted_at, "Date & Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :adjusted_at, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="flex gap-4">
        <%= form.submit "Add Adjustment", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors cursor-pointer" %>
        <%= link_to "Cancel", account_path(@account), class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-6 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
